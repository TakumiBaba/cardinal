div#profile_page
  margin-left: 10px
  h3
    font-size: 16px
  small
    font-weight: normal
  h4.title_box
    padding: 5px
    margin-bottom: 5px
  div.profile
    width: 550px
    float: left
    div.profile_header
      width: 550px
      div.p_h_left
        float: left
        width: 100px
        img
          margin: 5px
          width: 90px
          height: 90px
      div.p_h_right
        float: left
        width: 450px
        h4.title_box
          float: left
          width: 450px

        small.message
          float: left
          width: 450px
          min-height: 70px
        div.btns
          float: left
          width: 355px
          img
            margin-top: 10px
            margin-bottom: 10px
          img.like
            width: 80px
          img.message
            width: 120px
            margin-left: 5px
            margin-right: 5px
          img.talk
            width: 120px
    div.supporter-message-list
      width: 550px
      float: left
      ul
        padding-left: 10px
        li
          clear: left
          min-height: 100px
          width: 550px
          div.s-message-left
            height: 100%
            width: 50px
            float: left
            img
              width: 40px
              height: 40px
          div.s-message-right
            height: 100%
            width: 450px
            float: left
            div.s-messge-header
              height: 20%
              width: 450px
              float: left
              margin-bottom: 10px
            div.s-message-body
              height: 79%
              width: 450px
              float: left
    div.profile_body
      float: left
      width: 550px
      table
        margin-bottom: 10px
        font-size: 12px
        td
          padding: 5px
      table.sub
        width: 550px
        tr
          height: 5px
        td.key
          background-color: #cef6ec
          width: 130px
        td.value
          width: 340px
      table.main
        width: 550px
        tr
          height: 5px
        td.left-key
          background-color: #cef6ec
          width: 100px
        td.left-value
          width: 100px
        td.right-key
          background-color: #cef6ec
          width: 130px
        td.right-value
          width: 140px
    div.profile_supporters
      width: 550px
      float: left
      li
        div.thumbnail
          width: 90px
          a.to-user
            text-align: center
        img
          display: block
          margin: 0 auto
          width: 70px
          height: 70px